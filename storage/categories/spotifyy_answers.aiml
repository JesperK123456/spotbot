<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0" encoding="UTF-8">

    <!-- LOGIN -->
    <category>
        <pattern>LOGINOK</pattern>
        <template>
            <think>
                <set name="item-type">track</set>
                <set name="logged-in">Yes</set>
            </think>
            <random>
                <li> You are logged in! Want to hear a song? </li>
                <li> Login succesful, what would you like to hear?</li>
                <li> Login succeeded, how are you feeling today?</li>
            </random>
        </template>
    </category>


    <!-- PLAYBACK -->
    <category>
        <pattern>PLAYBOK</pattern>
        <template>
            <random>
                <li> enjoy it! </li>
                <li> here you go </li>
                <li> done </li>
                <li> no problem </li>
            </random>
        </template>
    </category>

    <category>
        <pattern>PAUSEOK</pattern>
        <template>
            <random>
                <li> i've paused your music </li>
                <li> music is paused </li>
                <li> done </li>
                <li> here you go </li>
            </random>
        </template>
    </category>

    <category>
        <pattern>PLAYBOK *</pattern>
        <template>
            Alright, playing <star/>!
        </template>
    </category>


    <!-- SHUFFLE -->
    <category>
        <pattern>SHUFFLEOK *</pattern>
        <template>
            <random>
                <li> shuffle is now <star/> </li>
                <li> i have turned shuffle <star/> for you </li>
                <li> done </li>
            </random>
        </template>
    </category>


    <!-- REPEAT -->
    <category>
        <pattern>REPEATOK TRACK</pattern>
        <template>
            <think><set name="curr-on-saved">
                <extension path="spotifyy.extensions.SpotifyExtension">
                    curr_on_saved
                </extension>
            </set></think>
            <condition name="curr-on-saved">
                <li value="ONSAVED-NO">
                    it seems you like this song, and it is not in your saved songs. 
                    Would you like to add it now?
                </li>
                <li>
                    <random>
                        <li> repeating the current track </li>
                        <li> repeat is on </li>
                        <li> repeat is now set to track</li>
                    </random>
                </li>
            </condition>
        </template>
    </category>
    <category>
        <pattern>YES</pattern>
        <that>
            would you like to add it now
        </that>
        <template>
            <srai>ADD TO SAVED</srai>
        </template>
    </category>

    <category>
        <pattern>REPEATOK CONTEXT</pattern>
        <template>
            <random>
                <li> repeat is now set to context </li>
                <li> repeating current context from now </li>
                <li> here you go</li>
            </random>
        </template>
    </category>

    <category>
        <pattern>REPEATOK OFF</pattern>
        <template>
            <random>
                <li> repeat is now off </li>
                <li> i have turned repeat off for you </li>
                <li> let's listen to some new songs </li>
            </random>
        </template>
    </category>


    <!-- ADD TO SAVED -->
    <category>
        <pattern>ADDOK *</pattern>
        <template>
            <random>
                <li> <star/> has been added to your music library </li>
                <li> i have saved <star/> for you </li>
                <li> done </li>
                <li> no problem </li>
            </random>
        </template>
    </category>


    <!-- FIND / PLAY ITEM -->
    <category>
        <pattern>FINDOK *</pattern>
        <template>
            <srai><extension path="spotifyy.extensions.SpotifyExtension">
                PRINT_QUERY_RESULT
            </extension></srai>
        </template>
    </category>

    <category>
        <pattern>PRINTRESULTSOK</pattern>
        <template>
            Which item would you like to hear?
        </template>
    </category>

    <category>
        <pattern>ITEM *</pattern>
        <that>which item would you like to hear</that>
        <template>
            <srai>PLAY ITEM QUERY <star index="1"/></srai>
        </template>
    </category>  

    <category>
        <pattern>PLAY ITEM QUERY *</pattern>
        <template>
            <srai><extension path="spotifyy.extensions.SpotifyExtension">
                PLAY_FROM_QUERY , <star/>
            </extension></srai>
        </template>
    </category>

    <category>
        <pattern>SHOW NEXT PAGE</pattern>
        <that>which item would you like to hear</that>
        <template>
            <srai><extension path="spotifyy.extensions.SpotifyExtension">
                PRINT_NEXT_QUERY_PAGE
            </extension></srai>
        </template>
    </category>

    <category>
        <pattern>PLAYOK *</pattern>
        <template>
            Alright, playing <star/>!
        </template>
    </category>
</aiml>